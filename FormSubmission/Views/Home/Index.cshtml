@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="">
    <div class="card shadow mx-auto w-50">
        <div class="card-header">
            <h1>Enter your information</h1>
        </div>
        <div class="card-body">
            <form asp-action="Process" asp-controller="Home" method="post">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <label asp-for="Name" class="form-label"></label>
                    <div class="w-75">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="w-75">
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <label asp-for="DOB" class="form-label"></label>
                    <div class="w-75">
                        <input asp-for="DOB" class="form-control">
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="w-75">
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <label asp-for="OddNumber" class="form-label"></label>
                    <div class="w-75">
                        <input asp-for="OddNumber" class="form-control">
                        <span asp-validation-for="OddNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="text-end"><button class="btn btn-success">Submit</button></div>
            </form>
        </div>
    </div>
    
</div>
